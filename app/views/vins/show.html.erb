<h1>show your vin details</h1>

<div class="container">
  <div class="content">
    <div class="card-btl">
      <%= cl_image_tag @vin.photo, width: 235, crop: :fill %>

    </div>

    <div class="card-descript">
        <div class="first-descript">
          <%= @vin.producteur %>
          <%= @vin.annee %>
        </div>

        <div class="second-descript">
          <%= @vin.region %>
          <%= @vin.appelation %>
          <%= @vin.vignoble %>
          <%= @vin.alcool %>
        </div>

        <div class="third-descript">
          <%= @vin.prix_btl %>
          <%= @vin.nb_btl_caisse %>
        </div>

        <div class="fourth-descript">
          <%= @vin.description %>
        </div>
    </div>

    <div class="card-btn">
      <span class="btn btn-primary vin-btn">
        <p>Add to cart</p>
      </span>
      <span class="btn btn-primary vin-btn">
        <%= link_to 'List of vins', vins_path %>
      </span>
      <span class="btn btn-primary vin-btn">
        <%= link_to "Edit", edit_vin_path %>
      </span>
      <span class="btn btn-primary vin-btn">
      <%= link_to "Delete", vin_path,
            method: :delete,
            data: { confirm: "Are you sure?" } %>
      </span>

    </div>

  </div>
</div>
